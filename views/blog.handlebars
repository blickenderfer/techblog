<div>
    <div>
        <div>
            <div>
                <h2>{{title}}</h2>
            </div>
            <div>
                <p>Created By {{user.username}} on {{format_date date_created}}</p>
            </div>
        </div>
        <p>{{description}}</p>
    </div>
</div>

{{#if logged_in}}
<form class="new-comment-form" data-blogid={{id}}>
    <div>
        <textarea id="comment_description" name="comment-body" placeholder="Enter Comment Here"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>
{{/if}}
<h2>Comments</h2>
{{#each comments as |comment|}}
<div>
    <p>{{comment.comment_description}}</p>
    <p>Created by {{comment.user.username}} on {{format_date date_created}}</p>
</div>
{{/each}}

<script src="/js/comments.js"></script>